@{
    /**/

    ViewBag.Title = "PublishedRecruitment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="wthreepvt-pos py-md-5 py-5" id="positions">

    <div class="main-recruiment">

        <div class="recruitment px-3 py-2">

            <h3 style="margin: 10px 0px 0px 20px">Đăng tin tuyển dụng</h3>
            <div class="form-recruitment px-3">
                <form style="margin-top: 20px">
                    <div class="form-group">
                        <label for="inputAddress2">Tiêu đề tin</label>
                        <input type="text" class="form-control" id="inputAddress2"
                               placeholder="Apartment, studio, or floor">
                    </div>
                    <h4 style="color: green">Thông tin làm việc</h4>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Vị trí tuyển dụng</label>
                            <input type="text" class="form-control" id="inputEmail4">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Loại tuyển dụng</label>
                            <input type="text" class="form-control" id="inputPassword4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Tên công ty</label>
                            <input type="text" class="form-control" id="inputEmail4">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Thời gian từ</label>
                            <input type="time" class="form-control" id="inputPassword4">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Đến</label>
                            <input type="time" class="form-control" id="inputPassword4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Địa điểm</label>
                            <input type="email" class="form-control" id="inputEmail4">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Ngày làm việc</label>
                            <input type="date" class="form-control" id="inputPassword4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Hình thức làm việc</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Full-time</option>
                                <option>Part-time</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Mức lương</label>
                            <input type="text" class="form-control" id="inputPassword4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlTextarea1">Mô tả công việc</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleFormControlTextarea1">Quyền lơị được hưởng</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                    <h4 style="color: green">Yêu cầu ứng viên</h4>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="inputEmail4">Tuổi từ</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputEmail4">đến</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Số lượng tuyển</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Giới tính</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Name</option>
                                <option>Nữ</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Yêu cầu kinh nghiệm</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Không yêu cầu kinh nghiệm</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Yêu cầu thêm</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="form-row">
                        <button type="submit" class="btn btn-danger mx-2 my-2">Huỷ bỏ</button>
                        <button type="submit" class="btn btn-primary mx-2 my-2">Đăng tin</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>


