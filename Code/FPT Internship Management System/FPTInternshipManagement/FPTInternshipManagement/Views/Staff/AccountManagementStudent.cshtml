<div class="container" id="uni_container" style="padding-top:70px;">

    <div class="s-subpage">
        <div id="NewSearchJob" style="padding: 0px 10%;">
            <div class="row justify-content-between bnr-form-w3ls">
                <div class="w-100">
                    <div class="row">
                        <div class="row col-md-12">
