@{
    Layout = "";
}
<table id="lsStudent" class="table table-striped table-bordered table-hover" cellspacing="0" width="80%" align="center">
    <thead>
        <tr style="background: #234a66; color: white;">
            <th class="th">No</th>
            <th class="th" style="width:400px;">Aspiration Name</th>
            <th class="th" style="width:400px;">Aspiration skills</th>
            <th class="th">Action</th>
        </tr>
    </thead>
    <tbody>
        @{ var count2 = 1;

            foreach (var ex in ViewBag.Asp)
            {
        <tr>
            <td>
                @count2
            </td>
            <td>
                @ex.AspirationsName
            </td>
            <td>
              @Html.Raw(ex.Description)
            </td>
            <td>
                <a data-toggle="modal" data-target="#EditAsp" onclick="GetDataAspEdit(@ex.AspirationsID)" style="padding: 10px;cursor:pointer;margin-right:10px;" class="btn btn-warning">&nbsp;View/Edit Detail &nbsp;</a>
                <a onclick="DelAps(@ex.AspirationsID)"  style="padding: 10px;cursor:pointer;background:red;" class="btn btn-danger">&nbsp;Delete &nbsp;</a>

            </td>
        </tr>
                count2 += 1;
            }

        }

    </tbody>
</table>

