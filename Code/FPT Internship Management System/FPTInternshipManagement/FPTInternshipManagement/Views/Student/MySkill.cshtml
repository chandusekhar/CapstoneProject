
@{ 
    Layout = "";
}
    <table id="lsStudent" class="table table-striped table-bordered table-hover" cellspacing="0" width="80%" align="center">
        <thead>
            <tr  style="background: #234a66; color: white;">
                <th class="th">No</th>
                <th class="th">Skill</th>
                <th class="th">Description</th>
                <th class="th">Action</th>
            </tr>
        </thead>
        <tbody>
            @{ var count = 1;

                foreach (var ex in ViewBag.Exp)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @ex.skill
                        </td>
                        <td>
                            @ex.Des
                        </td>

                        <td>
                            <a onclick="DelSkill(@ex.IdEx)" style="cursor:pointer;background:red;padding:4px;background:red" class="btn btn-danger">&nbsp; Delete &nbsp;</a>
                        </td>
                    </tr>
                    count += 1;
                }

            }

        </tbody>
    </table>